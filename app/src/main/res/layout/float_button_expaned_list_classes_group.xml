<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_classes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:text="JENIS"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/back"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_classes"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">
        <RadioButton
            android:id="@+id/classes_one"
            style="@style/float_button_classes_group_rb_style"
            android:text="Semua"
            />
        <View
            android:background="#cccccc"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/classes_two"
            style="@style/float_button_classes_group_rb_style"
            android:text="Amerika"
            />
        <View
            android:background="#cccccc"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/classes_three"
            style="@style/float_button_classes_group_rb_style"
            android:text="Indonesia"
            />
        <View
            android:background="#cccccc"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/classes_four"
            style="@style/float_button_classes_group_rb_style"
            android:text="Korea"
            />
        <View
            android:background="#cccccc"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/classes_six"
            style="@style/float_button_classes_group_rb_style"
            android:text="India"
            />

    </RadioGroup>
</LinearLayout>