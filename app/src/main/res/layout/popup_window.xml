<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
              android:background="#cccccc"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pop_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <ImageView
            android:id="@+id/down_image_view"
            android:layout_weight="1"
            android:src="@drawable/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="5"
            android:textSize="18sp"
            android:text="DownLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView2"/>

        <ImageView
            android:id="@+id/pop_close"
            android:src="@drawable/ic_action_navigation_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/pop_view"
        android:layout_above="@+id/fragment_contain"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f5eded"
        >

    </View>
    <FrameLayout
        android:id="@+id/fragment_contain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
    </FrameLayout>
    <View
        android:layout_above="@+id/fragment_contain"
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f5eded"
        />
<LinearLayout
    android:orientation="horizontal"
    android:background="#cccccc"
    android:layout_width="match_parent"
    android:layout_height="35dp">
<TextView
    android:id="@+id/pop_downall"
    android:text="DOWNLOADALL"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/pop_view_downloaded"
        android:text="VIEW DOWNLOADED"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

</LinearLayout>