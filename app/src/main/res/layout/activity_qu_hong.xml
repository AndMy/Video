<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_qu_hong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.home.quhong.quhong.QuHong"
    android:weightSum="1">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:src="@drawable/bull"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#56abe4"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_fragment_contain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ccc"></FrameLayout>

        <RadioGroup
            android:id="@+id/home_rg"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_rb_tv"
                style="@style/rb_style"
                android:drawableTop="@drawable/bg_tv_sel"
                android:text="TV" />

            <RadioButton
                android:id="@+id/home_rb_video"
                style="@style/rb_style"
                android:drawableTop="@drawable/bg_video_sel"
                android:text="VIDEOS" />

            <RadioButton
                android:id="@+id/home_rb_float_button"
                style="@style/rb_style"
                android:drawableTop="@drawable/bg_float_button_sel"
                android:text="CATEGORY" />

            <RadioButton
                android:id="@+id/home_rb_local"
                style="@style/rb_style"
                android:drawableTop="@drawable/bg_local_sel"
                android:text="LOCAL" />

            <RadioButton
                android:id="@+id/home_rb_my"
                style="@style/rb_style"
                android:drawableTop="@drawable/bg_my_sel"
                android:text="MY" />

        </RadioGroup>

    </LinearLayout>

</FrameLayout>
