<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rb_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/cb_color_sel</item>
        <item name="android:drawableTint">@drawable/cb_color_sel</item>
    </style>

    <style name="TVCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#2c1571</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>

    <!--Theme Dialog style-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
