    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular LiveApi-level can go here. -->
        <item name="android:listDivider">@drawable/default_line</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- 启动页 引导页设置StatusBar为透明色 -->
    <style name="ColorTranslucentTheme" parent="@style/BaseAppTheme" />

    <!--主界面 设置Style-->
    <style name="MainActivityColorTranslucentTheme" parent="@style/BaseAppTheme" />



    <style name="rb_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/cb_color_sel</item>
        <item name="android:drawableTint">@drawable/cb_color_sel</item>
    </style>

    <style name="TVCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#2c1571</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>
    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <!--Theme Dialog style-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
<!--popupWindow的Style-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
